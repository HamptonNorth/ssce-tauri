{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SSCE Desktop",
  "version": "1.0.2",
  "identifier": "com.ssce.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "SSCE Desktop",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.ico", "icons/icon.icns"],
    "resources": {
      "../src/config/defaults.json": "config/defaults.json"
    },
    "linux": {
      "deb": {
        "section": "graphics",
        "priority": "optional"
      }
    },
    "windows": {
      "wix": {
        "language": "en-GB"
      }
    },
    "publisher": "Claude"
  }
}
